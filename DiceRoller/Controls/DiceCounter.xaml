<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="DiceCounter"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<StackPanel HorizontalAlignment="Left" Margin="0" Orientation="Horizontal">
			<Grid x:Name="GridAdd" VerticalAlignment="Center" Width="20" Height="30" Background="#00000000" Margin="-3,0">
				<Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Margin="0" Width="2" Height="14" VerticalAlignment="Center"/>
				<Rectangle Fill="#FFF4F4F5" Margin="0" VerticalAlignment="Center" Height="2" Width="14" HorizontalAlignment="Center"/>
			</Grid>
			<TextBlock TextWrapping="Wrap" Text="{Binding DiceNumber, ElementName=UserControl}" VerticalAlignment="Center" FontFamily="/LanceDes;component/Fonts/#Segoe WP Semibold" Margin="6,0,6,3" FontSize="29.333" Foreground="White" Width="34" TextAlignment="Center"/>
			<Grid x:Name="GridSub" VerticalAlignment="Center" Width="20" Height="30" Background="#00000000" Margin="-3,0">
				<Rectangle Fill="#FFF4F4F5" Margin="0" VerticalAlignment="Center" Height="2" Width="14" HorizontalAlignment="Center"/>
			</Grid>
		</StackPanel>
	</Grid>
</UserControl>